<h2><%= t('.title') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, :label => t('.username'), :required => false, :autofocus => true %>
    <%= f.input :password, :label => t('.pwd'), :required => false %>
    <%= f.input :remember_me, :label => false, :inline_label => t('.remember'), :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
